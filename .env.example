# MediaHub Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Stripe Configuration (Required for donations)
# Get your keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Frontend Build Variables (for Docker/production builds)
# These are baked into the frontend at build time
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
VITE_API_BASE_URL=

# Application Configuration
NODE_ENV=production

# Database Configuration (Optional - uses in-memory storage by default)
# Uncomment and configure if using PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/mediahub

# Session Configuration (Optional)
# SESSION_SECRET=your_secure_random_session_secret_here